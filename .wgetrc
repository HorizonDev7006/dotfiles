# save downloads 
dir_prefix = ~/wget

# keep going where you left off if interrupted
continue = on

# retry up to 10 times before saying f it
tries = 10

# wait 3 seconds between retries to not look too sus
wait = 3

# cap download speed to 500 KB/s so you don’t hog the internet
limit_rate = 500k

# use a common browser user-agent so servers don’t block you
user_agent = Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/100.0.4896.127 Safari/537.36

# be verbose to see what wget is up to
verbose = on

# follow redirects like a boss
follow_ftp = on

# timeout if no response for 30 seconds
timeout = 30

# don’t download robots.txt rules (go rogue)
robots = off
